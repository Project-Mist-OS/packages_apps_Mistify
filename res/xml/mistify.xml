<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/mistify_title" >

        <com.android.settingslib.widget.LayoutPreference
        android:key="mist_header"
        android:layout="@layout/mist_labs_header"
        settings:controller="com.mist.mistify.MistHeaderController" />

        <!-- Buttons -->
        <Preference
            android:key="buttonsettings_category"
            android:title="@string/button_title"
            android:fragment="com.mist.mistify.categories.ButtonSettings"
            android:summary="@string/button_summary"
            settings:layout="@layout/mist_dashboard_preference_top"
            android:icon="@drawable/ic_settings_buttons" />

        <!-- Gestures -->
        <Preference
            android:key="gestures_category"
            android:title="@string/gestures_title" 
            android:fragment="com.mist.mistify.categories.GestureSettings"
            android:summary="@string/gestures_summary"
            settings:layout="@layout/mist_dashboard_preference_bottom"
            android:icon="@drawable/ic_settings_sos_gestures"/>

        <!-- Lock Screen -->
        <Preference
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title" 
            android:fragment="com.mist.mistify.categories.LockScreenSettings"
            android:summary="@string/lockscreen_summary"
            settings:layout="@layout/mist_dashboard_preference_top"
            android:icon="@drawable/ic_mist_lockscreen"/>

        <!-- Notifications -->
        <Preference
            android:key="notifications_category"
            android:title="@string/notifications_title"
            android:fragment="com.mist.mistify.categories.NotificationSettings"
            android:summary="@string/notifications_summary"
            settings:layout="@layout/mist_dashboard_preference_bottom"
            android:icon="@drawable/ic_mist_notifications"/>

        <!-- system -->
        <Preference
            android:key="system_category"
            android:title="@string/system_title" 
            android:fragment="com.mist.mistify.categories.SystemSettings"
            android:summary="@string/system_summary"
            settings:layout="@layout/mist_dashboard_preference_top"
            android:icon="@drawable/ic_settings_system"/>
        
        <!-- Misc -->
        <Preference
            android:key="misc_category"
            android:title="@string/misc_title" 
            android:fragment="com.mist.mistify.categories.MiscSettings"
            android:summary="@string/misc_summary"
            settings:layout="@layout/mist_dashboard_preference_bottom"
            android:icon="@drawable/ic_mist_miscellaneous"/>

</PreferenceScreen>
